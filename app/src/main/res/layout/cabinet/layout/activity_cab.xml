            android:text="@string/qysj"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/list2Cab"
        android:layout_width="751dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="@+id/linelay2Cab"
        app:layout_constraintTop_toBottomOf="@+id/linelay2Cab" />

    <ImageButton
        android:id="@+id/btnC2M"
        android:layout_width="79dp"
        android:layout_height="42dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/linelay1Cab"
        app:layout_constraintEnd_toEndOf="@+id/linelay1Cab" />

