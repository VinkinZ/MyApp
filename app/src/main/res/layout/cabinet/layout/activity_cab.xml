<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actCab"
    android:layout_width="1024dp"
    android:layout_height="768dp"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="260dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:textColor="@color/blue1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOpt"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/red"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/tvTime"
        app:layout_constraintTop_toBottomOf="@+id/tvTime" />

    <fragment
        android:id="@+id/fragPower"
        android:name="com.sinano.rfidrccs.ui.frag.PowerFrag"
        android:layout_width="138dp"
        android:layout_height="90dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/fragCab"
        android:name="com.sinano.rfidrccs.ui.frag.NullFrag"
        android:layout_width="180dp"
        android:layout_height="297dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/linelay1Cab"
        app:layout_constraintTop_toTopOf="@+id/linelay1Cab" />

    <TextView
        android:id="@+id/tvGNSJ"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="140dp"
        android:gravity="center_vertical"
        android:text="@string/gnsjlb"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/linelay1Cab"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
