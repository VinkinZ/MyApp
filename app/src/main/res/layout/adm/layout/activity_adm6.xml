<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actAdm6"
    android:layout_width="1024dp"
    android:layout_height="768dp"
    android:background="@drawable/bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tvAdm6Title"
        android:layout_width="524dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="250dp"
        android:gravity="center"
        android:text="@string/URLszt"
        android:textColor="@color/red"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="260dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:textColor="@color/blue1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/fragPower"
        android:name="com.sinano.rfidrccs.ui.frag.PowerFrag"
        android:layout_width="138dp"
        android:layout_height="90dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSLT"
        android:layout_width="194dp"
        android:layout_height="200dp"
        android:layout_marginTop="245dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSD"
        android:layout_width="109dp"
        android:layout_height="150dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSLT" />

    <TextView
        android:id="@+id/tvURL"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/URLsz"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/imgSD"
        app:layout_constraintTop_toBottomOf="@+id/imgSD" />

    <EditText
        android:id="@+id/etMHQURL"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="250dp"
        android:hint="@string/qsrmhqpzURL"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/imgSLT"
        app:layout_constraintTop_toBottomOf="@+id/tvTime" />

    <ImageButton
        android:id="@+id/btnBCMQHURL"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toEndOf="@+id/etMHQURL"
        app:layout_constraintTop_toTopOf="@+id/etMHQURL" />

    <EditText
        android:id="@+id/etURL"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:hint="@string/qsrglptURL"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/etMHQURL"
        app:layout_constraintTop_toBottomOf="@+id/etMHQURL" />

    <ImageButton
        android:id="@+id/btnBCURL"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toEndOf="@+id/etURL"
        app:layout_constraintTop_toTopOf="@+id/etURL" />

    <ImageButton
        android:id="@+id/btnA2A"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>