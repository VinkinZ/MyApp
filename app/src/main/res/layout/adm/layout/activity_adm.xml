        android:textColor="#1C86EE"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnMRHC"
        app:layout_constraintStart_toStartOf="@+id/btnMRHC"
        app:layout_constraintTop_toBottomOf="@+id/btnMRHC" />

    <ImageButton
        android:id="@+id/btnURL"
        android:layout_width="100dp"
        android:layout_height="137dp"
        android:layout_marginStart="71dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toEndOf="@+id/btnMRHC"
        app:layout_constraintTop_toTopOf="@+id/btnMRHC" />

    <TextView
        android:id="@+id/tvURL"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/URLsz"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnURL"
