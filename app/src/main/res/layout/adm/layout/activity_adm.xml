        app:layout_constraintTop_toTopOf="@+id/btnRK" />

    <TextView
        android:id="@+id/tvBF"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/sjbf"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnYBF"
        app:layout_constraintStart_toStartOf="@+id/btnYBF"
        app:layout_constraintTop_toBottomOf="@+id/btnYBF" />

    <ImageButton
        android:id="@+id/btnSX"
        android:layout_width="100dp"
        android:layout_height="137dp"
        android:layout_marginStart="80dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toEndOf="@+id/btnYBF"
        app:layout_constraintTop_toTopOf="@+id/btnYBF" />

    <TextView
        android:id="@+id/tvSX"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/sjgsx"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnSX"
        app:layout_constraintStart_toStartOf="@+id/btnSX"
        app:layout_constraintTop_toBottomOf="@+id/btnSX" />

    <ImageView
        android:id="@+id/imgZDQY"
        android:layout_width="100dp"
        android:layout_height="137dp"
        android:layout_marginStart="215dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRK" />

    <TextView
        android:id="@+id/tvZDQY"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/dczdqyl"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imgZDQY"
        app:layout_constraintStart_toStartOf="@+id/imgZDQY"
        app:layout_constraintTop_toBottomOf="@+id/imgZDQY" />

    <Spinner
        android:id="@+id/spinZDQY"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/imgZDQY"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="@+id/imgZDQY"
        app:layout_constraintTop_toBottomOf="@+id/imgZDQY" />

    <ImageButton
        android:id="@+id/btnMRHC"
        android:layout_width="100dp"
        android:layout_height="137dp"
        android:layout_marginStart="70dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toEndOf="@+id/imgZDQY"
        app:layout_constraintTop_toTopOf="@+id/imgZDQY" />

    <TextView
        android:id="@+id/tvMRHC"
