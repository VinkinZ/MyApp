<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragCab"
    android:layout_width="180dp"
    android:layout_height="300dp"
    android:background="@drawable/bg_fragcab">

    <ImageButton
        android:id="@+id/btnFragCab"
        android:layout_width="170dp"
        android:layout_height="290dp"
        android:background="@drawable/btnfragcab_bg"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgIconFragCab"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="@+id/btnFragCab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnOpenDoor"
        android:layout_width="78dp"
        android:layout_height="100dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="@+id/btnFragCab"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvIdCab"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="45dp"
        android:gravity="center"
        android:textColor="@color/gray1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnFragCab"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnFragCab"
        app:layout_constraintTop_toTopOf="@+id/imgIconFragCab" />

    <TextView
        android:id="@+id/tvAttrCab"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/gray1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIdCab" />

    <ImageView
        android:id="@+id/imgTemp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="110dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginStart="3dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgTemp"
        app:layout_constraintStart_toEndOf="@+id/imgTemp" />

    <ImageView
        android:id="@+id/imgHum"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="@+id/imgTemp"
        app:layout_constraintTop_toBottomOf="@+id/imgTemp" />

    <TextView
        android:id="@+id/tvHum"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="3dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgHum"
        app:layout_constraintStart_toEndOf="@+id/imgHum" />

    <ImageView
        android:id="@+id/imgVoc"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"

        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="@+id/imgHum"
        app:layout_constraintTop_toBottomOf="@+id/imgHum" />

    <TextView
        android:id="@+id/tvVoc"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="3dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgVoc"
        app:layout_constraintStart_toEndOf="@+id/imgVoc" />


</android.support.constraint.ConstraintLayout>