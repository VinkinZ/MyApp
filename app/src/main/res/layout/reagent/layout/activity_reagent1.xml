<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actReagent1"
    android:layout_width="1024dp"
    android:layout_height="768dp"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="260dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:textColor="@color/blue1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOpt"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/red"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/tvTime"
        app:layout_constraintTop_toBottomOf="@+id/tvTime" />

    <fragment
        android:id="@+id/fragPower"
        android:name="com.sinano.rfidrccs.ui.frag.PowerFrag"
        android:layout_width="138dp"
        android:layout_height="90dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnR2R"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/linelayR1"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvWRK"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp"
        android:gravity="center_vertical"
        android:text="@string/wrksj"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/fragPower"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linelayR1"
        android:layout_width="831dp"
        android:layout_height="40dp"
        android:background="@color/blue3"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/tvWRK"
        app:layout_constraintTop_toBottomOf="@+id/tvWRK">

        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/gray"
            android:gravity="center"
            android:text="@string/sjmc"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="40dp"
            android:background="#000000" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/gg"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="40dp"
            android:background="#000000" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/zjl"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="40dp"
            android:background="#000000" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/sjlx"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="40dp"
            android:background="#000000" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/gh"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="40dp"
            android:background="#000000" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/zt"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/listR1"
        android:layout_width="831dp"
        android:layout_height="550dp"
        app:layout_constraintStart_toStartOf="@+id/linelayR1"
        app:layout_constraintTop_toBottomOf="@+id/linelayR1" />


</android.support.constraint.ConstraintLayout>